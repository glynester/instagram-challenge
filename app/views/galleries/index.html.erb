
<%if @galleries.any? %>
  <%@galleries.each do |gallery| %>
      <!-- gallery_path(gallery) -->
      <p><strong><%= link_to gallery.name, "/galleries/#{gallery.id}", method: :get %></strong>
        <strong><%= link_to "Edit \"#{gallery.name}\"", edit_gallery_path(gallery) %></strong></p>
  <% end %>
<% else %>
  <h2>No galleries yet</h2>
<% end %>

<h3><%= link_to("Add a gallery", new_gallery_path) %></h3>
